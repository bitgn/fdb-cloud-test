{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
        "aws_secret_key": "{{env `AWS_SECRET_KEY`}}"
    },
    "builders": [
        {
            "name": "aws",
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "eu-central-1",
            "source_ami": "ami-373717dc",
            "instance_type": "t2.small",
            "ssh_username": "admin",
            "ami_name": "bitgn-fdb",
            "force_deregister": true,
            
            "ami_description": "Debian 9.4 with FDB installed",
            "tags": {
                "OS_Version" : "Debian",
                "Release": "9.4",
                "Component": "fdb"
            }
        },
        {
            "name": "test",
            "type": "docker",
            "image": "debian:9.4",
            "discard": true
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "upload/",
            "destination": "/tmp/"
        },
        {
            "type": "shell",
            "inline": [
                "sleep 30",
                "cd /tmp",
                "./debian.sh"
            ]
        }
    ]
}
