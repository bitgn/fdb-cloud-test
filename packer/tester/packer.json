{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
        "aws_secret_key": "{{env `AWS_SECRET_KEY`}}"
    },
    "builders": [
        {
            "name": "aws",
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "eu-central-1",
            "source_ami": "ami-ccc021a3",
            "instance_type": "t2.small",
            "ssh_username": "admin",
            "ami_name": "bitgn-tester",
            "ami_description": "Debian 8.4 with testing tools",
            "force_deregister": true,
            "tags": {
                "OS_Version" : "Debian",
                "Release": "8.4",
                "Component": "tester"
            }
        },
        {
            "name": "docker",
            "type": "docker",
            "image": "debian:8.4",
            "commit": true
        },
        {
            "name": "test",
            "type": "docker",
            "image": "debian:8.4",
            "discard": true
        }
  ],
    "provisioners": [
        {
            "type": "file",
            "source": "upload/",
            "destination": "/tmp/"
        },
        {
            "type": "file",
            "source": "../shared/",
            "destination": "/tmp/"
        },
        {
            "type": "shell",
            "inline": [
                "sleep 30",
                "cd /tmp",
                "./debian.sh"
            ]
        }
    ]
}
